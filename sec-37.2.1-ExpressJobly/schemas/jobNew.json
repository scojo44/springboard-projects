{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://our.company.com/companyNew.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "title",
    "companyHandle"
  ],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "companyHandle": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10
    },
    "salary": {
      "type": "integer",
      "minimum": 0
    },
    "equity": {
      "type": "number",
      "minimum": 0,
      "exclusiveMaximum": 1
    }
  }
}
